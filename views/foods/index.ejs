<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>grEAT Food</title>
    <meta charset="utf-8">

  </head>
  <body>
    <h1>INDEX.EJS</h1>

    <div class="food-recipes">
      <% for(let i = 0; i < food.length; i++){ %>
          <div class="recipe-info">

            <a href="/foods/<%= food[i].id %> ">
              <img src="<%= food[i].img %>" alt=""> <br>
              <%= food[i].name %>
            </a>
          </div>
        <% } %>

    </div>

  </body>
</html>
